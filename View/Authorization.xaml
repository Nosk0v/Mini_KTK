<Window x:Class="Mini_KTK.View.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mini_KTK.View"
        mc:Ignorable="d"
        Title="Authorization" Height="450" Width="400" ResizeMode="NoResize">
    <Grid>
        <StackPanel  Margin="20" VerticalAlignment="Center">
            <TextBlock FontSize="30" HorizontalAlignment="Center" Margin="0 5" FontWeight="Bold">Авторизация</TextBlock>

            <Label Content="Логин" Foreground="#484848"></Label>
            <TextBox Name="tbUsername" Margin="0 5" FontSize="16"></TextBox>

            <Label Content="Пароль" Foreground="#484848" Margin="0 10 0 0"></Label>
            <PasswordBox Name="tbPassword" Margin="0 5" FontSize="16"></PasswordBox>

            <Button Margin="10 20 10 10" Padding="6" Click="onSingIn" Content="Войти" Background="Purple" Foreground="White"></Button>
            <TextBlock FontSize="12" HorizontalAlignment="Center" Margin="0 5">Если нет аккаунта, зарегистрируйтесь</TextBlock>
        </StackPanel>
    </Grid>
</Window>
